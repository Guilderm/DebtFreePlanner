{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "types": ["@types/node", "vue", "nuxt", "nuxt/schema"],
    "paths": {
      "#app": ["./.nuxt/types/app"],
      "#app/*": ["./.nuxt/types/app/*"],
      "#build": ["./.nuxt/types/build"],
      "#build/*": ["./.nuxt/types/build/*"],
      "@/*": ["./app/*"]
    },
    "baseUrl": ".",
    "composite": true
  },
  "include": [
    ".nuxt",
    "nuxt.config.ts",
    "types/**/*.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.vue",
    "app/**/*.ts",
    "app/**/*.tsx",
    "app/**/*.vue",
    "apps/shared/**/*.{ts,tsx,vue}",
    "apps/public-site/**/*.{ts,tsx,vue}",
    "apps/pwa-server/**/*.{ts,tsx,vue}",
    "apps/pwa-client/**/*.{ts,tsx,vue}"
  ],
  "exclude": ["node_modules", "dist", "**/.output", "**/.next"]
}
