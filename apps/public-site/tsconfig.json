{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "composite": true,
    "lib": ["ESNext", "DOM"],
    "module": "ESNext",
    "paths": {
      "#app": ["./.nuxt/types/app"],
      "#app/*": ["./.nuxt/types/app/*"],
      "#build": ["./.nuxt/types/build"],
      "#build/*": ["./.nuxt/types/build/*"],
      "#imports": [".nuxt/types/imports.d.ts"],
      "#vue": [".nuxt/types/vue-shim.d.ts"],
      "@/*": ["./app/*"],
      "@/components/*": ["./app/components/*"],
      "~/*": ["app/*"]
    },
    "types": ["@types/node", "vue", "nuxt", "nuxt/schema"],
    "target": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true
  },
  "include": [
    ".nuxt",
    "**/*.ts",
    "**/*.tsx",
    "**/*.vue",
    "app/**/*.ts",
    "app/**/*.tsx",
    "app/**/*.vue",
    "apps/public-site/**/*.{ts,tsx,vue}",
    "apps/pwa-client/**/*.{ts,tsx,vue}",
    "apps/pwa-server/**/*.{ts,tsx,vue}",
    "apps/shared/**/*.{ts,tsx,vue}",
    "nuxt.config.ts",
    "types/**/*.d.ts",
    "**/*.js"
  ],
  "exclude": ["dist", "node_modules", "**/.next", "**/.output"]
}
