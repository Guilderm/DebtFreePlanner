{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "types": ["@nuxt/types"],
    "paths": {
      "#app": ["./.nuxt/types/app"],
      "#app/*": ["./.nuxt/types/app/*"],
      "#build": ["./.nuxt/types/build"],
      "#build/*": ["./.nuxt/types/build/*"],
      "@/*": ["./app/*"]
    },
    "composite": true
  },
  "include": [
    "app/**/*.{ts,tsx,vue}",
    ".nuxt/types/**/*.ts",
    "types/**/*.d.ts",
    "nuxt.config.ts"
  ],
  "exclude": ["node_modules", "dist", "**/.nuxt", "**/.output"]
}
