{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "types": ["node", "nuxt"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["app/*"],
      "~/*": ["app/*"]
    }
  },
  "include": [
    "app/**/*.ts",
    "app/**/*.d.ts",
    "app/**/*.vue",
    "types/**/*.d.ts",
    "nuxt.config.ts",
    ".nuxt/**/*.d.ts"
  ],
  "exclude": ["node_modules", "dist", ".output"]
}
