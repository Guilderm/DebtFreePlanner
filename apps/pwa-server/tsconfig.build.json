{
  "extends": "./tsconfig.json",
  "exclude": ["test", "dist", "**/*spec.ts"],
  "compilerOptions": {
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "incremental": true,
    "skipLibCheck": true,
    "moduleResolution": "node"
  }
}
