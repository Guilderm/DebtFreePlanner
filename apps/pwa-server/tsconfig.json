{
  "compilerOptions": {
    "composite": true,
    "module": "ESNext",
    "target": "ES2017",
    "lib": ["ES2017", "DOM"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "./dist",
    "declaration": true,
    "sourceMap": true,
    "incremental": true,
    "types": ["node"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", "test", "**/*.spec.ts"]
}
