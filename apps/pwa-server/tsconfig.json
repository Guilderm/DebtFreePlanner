{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2021",
    "outDir": "./dist",
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "incremental": true,
    "types": ["node"],
    "paths": {
      "@shared/*": ["../../shared/src/*"]
    }
  },
  "include": ["src/**/*.ts", "test/**/*.ts", "../../shared/src/**/*.ts"],
  "exclude": ["node_modules", "dist", ".nuxt", ".output"]
}
