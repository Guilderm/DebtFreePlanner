{
  "compilerOptions": {
    "composite": true,
    "module": "ESNext",
    "target": "ES2017",
    "lib": ["ES2017", "DOM"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "./dist",
    "declaration": true,
    "sourceMap": true,
    "incremental": true,
    "types": ["node"],
    "rootDir": ".", // Ensures the compiler looks at the current directory for files
    "baseUrl": "."
  },
  "include": ["src/**/*.ts", "test/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
