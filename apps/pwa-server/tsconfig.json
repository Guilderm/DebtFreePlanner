{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "incremental": true,
    "types": ["node"],
    "paths": {
      "@shared/*": ["../../apps/shared/*"]
    },
    "declaration": true,
    "sourceMap": true,
    "removeComments": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", "test", "**/*spec.ts"]
}
