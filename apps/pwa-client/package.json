{
  "name": "@debtfreeplanner/pwa-client",
  "version": "0.0.1",
  "description": "The public-facing website for DebtFreePlanner.",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "nest build",
    "start": "nest start",
    "dev": "nest start --watch",
    "lint": "pnpm --filter debtfreeplanner run lint",
    "lint:fix": "pnpm --filter debtfreeplanner run lint:fix",
    "format": "pnpm --filter debtfreeplanner run format",
    "typecheck": "tsc --noEmit --pretty",
    "verify": "pnpm run lint:fix && pnpm run format && pnpm run typecheck",
    "preinstall": "npx only-allow pnpm"
  },
  "dependencies": {
    "@auth0/auth0-vue": "^2.3.3",
    "@headlessui/vue": "^1.7.23",
    "@heroicons/vue": "^2.1.5",
    "axios": "^1.7.7",
    "nuxt-gtag": "^3.0.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nuxtjs/tailwindcss": "^6.12.2",
    "@tailwindcss/forms": "^0.5.9",
    "@tailwindcss/typography": "^0.5.15",
    "@types/node": "^22.9.0",
    "nuxt": "^3.14.159",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.14",
    "typescript": "^5.6.3",
    "vue-tsc": "^2.1.10"
  },
  "deployConfig": {
    "platform": "GCP Cloud Run"
  }
}