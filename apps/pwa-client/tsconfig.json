{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2018",
    "baseUrl": ".",
    "composite": true,
    "lib": ["ESNext", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "types": ["@types/node", "@nuxt/types", "@nuxt/typescript-build"],
    "paths": {
      "#app": ["./.nuxt/types/app"],
      "#app/*": ["./.nuxt/types/app/*"],
      "#build": ["./.nuxt/types/build"],
      "#build/*": ["./.nuxt/types/build/*"],
      "#imports": ["./.nuxt/types/imports.d.ts"],
      "#imports/*": ["./.nuxt/types/imports/*"],
      "#vue": ["./.nuxt/types/vue-shim.d.ts"],
      "#head": ["./.nuxt/types/head"],
      "#head/*": ["./.nuxt/types/head/*"],
      "#nuxt": ["./.nuxt/types/nuxt"],
      "#nuxt/*": ["./.nuxt/types/nuxt/*"],
      "@/*": ["./app/*"],
      "@/components/*": ["./app/components/*"],
      "~/*": ["app/*"]
    }
  },
  "include": ["**/*.ts", "**/*.js", "**/*.vue", "nuxt.config.ts"],
  "exclude": [
    "dist",
    "node_modules",
    "**/.next",
    "**/.nuxt",
    "**/.output",
    "tailwind.config.js"
  ]
}
