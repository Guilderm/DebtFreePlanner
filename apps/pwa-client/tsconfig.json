{
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["../shared/*"],
      "@/*": ["./app/*"]
    },
  },
  "include": ["**/*.ts", "**/*.js", "**/*.vue", "nuxt.config.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "**/.nuxt",
    "**/.output",
    "tailwind.config.js"
  ]
}
