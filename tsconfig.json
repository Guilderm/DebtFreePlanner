// tsconfig.json
{
  "compilerOptions": {
    "target": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["apps/shared/*"]
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "composite": true // Required for project references
  },
  "references": [
    { "path": "./apps/public-site" },
    { "path": "./apps/pwa-server" },
    { "path": "./apps/pwa-client" }
  ],
  "include": [],
  "exclude": ["node_modules", "dist", "**/.nuxt", "**/.output", "**/.next"]
}
